{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-Wall","-Wextra","-Wformat-nonliteral","-Wcast-align","-Wpointer-arith","-Wmissing-declarations","-Winline","-Wcast-qual","-Wshadow","-Wwrite-strings","-Wno-unused-parameter","-Wfloat-equal","-pedantic","-ansi",               
                "-std=c++23",
                "/usr/local/include/raylib.h",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}